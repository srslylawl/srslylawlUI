<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
http://wowprogramming.com/FrameXML/UI.xsd">
	<Frame name="srslylawlUI_UnitTemplate" virtual="true">
		<Size x="36" y="50"/>
		<Layers>
			<Layer level="BACKGROUND">
			<Texture setAllPoints="true" alpha="0.5">
				<Color r="0.0" g="0.0" b="0.0"/>
			</Texture>
			</Layer>
		</Layers>
		<Frames>
		<!-- unitButton -->
			<Button name="$parent_Unit" parentKey="unit" inherits="SecureUnitButtonTemplate" registerForClicks="AnyUp" enableMouse="true">
				<Size x="34" y="50" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="1" y="-1" />
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Name" parentKey="name" inherits="GameFontHighlight"/>
						<Texture name="$parent_Selected" parentKey="selected" setAllPoints="true" file="Interface\AddOns\srslylawlUI\media\healthBarHighlight" alphaMode="ADD" hidden="true"/>
					</Layer>
				</Layers>
				<Frames>
					<StatusBar name="$parent_HealthBar" parentKey="healthBar">
						<Size x="34" y="50" />
						<Anchors>
							<Anchor point="TOPLEFT" />
						</Anchors>
						<BarTexture file="Interface\Addons\srslylawlUI\media\healthBar" />
						<BarColor r="1.0" g="1.0" b="1.0" />
						<Layers>
						<Layer level="OVERLAY">
						<FontString name="$parent_Text" parentKey="text" inherits="GameFontHighlight"/>
							</Layer>
						</Layers>
					</StatusBar>
					<StatusBar name="$parent_PowerBar" parentKey="powerBar" orientation="VERTICAL">
						<Size x="10" y="50" />
						<Anchors>
							<Anchor point="TOPRIGHT" relativePoint="TOPLEFT">
								<Offset x="-1" y="0" />
							</Anchor>
						</Anchors>
						<BarTexture file="Interface\AddOns\srslylawlUI\media\healthBar"/>
						<BarColor r="1.0" g="1.0" b="1.0" />
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="background" alpha="0.5">
									<Color r="0.0" g="0.0" b="0.0"/>
									<Size x="12" y="52" />
									<Anchors>
										<Anchor point="CENTER">
											<Offset x="0" y="0" />
										</Anchor>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</StatusBar>
				</Frames>
				<Scripts>
					<OnDragStart function="srslylawlUI_Button_OnDragStart"/>
					<OnDragStop function="srslylawlUI_Button_OnDragStop"/>
					<OnHide function="srslylawlUI_Button_OnDragStop"/>
				</Scripts>
				<Attributes>
					<Attribute name="useparent-unit" type="boolean" value="true"/>
					<Attribute name="*type1" type="string" value="target"/>
					<Attribute name="type2" type="string" value="togglemenu"/>
				</Attributes>
				<HighlightTexture file="Interface\AddOns\srslylawlUI\media\healthBarHighlight" alphaMode="ADD"/>
			</Button>
			<!-- PET -->
			<Button name="$parent_Pet" parentKey="pet" inherits="SecureHandlerShowHideTemplate,SecureUnitButtonTemplate" emableMouse="true">
				<Size x="15" y="35"/>
				<Anchors>
					<Anchor relativePoint="TOPRIGHT">
						<Offset x="1" y="-1"/>
					</Anchor>
				</Anchors>
				<Frames>
					<StatusBar name="$parent_HealthBar" parentKey="healthBar" setAllPoints="true" orientation="vertical">
						<BarTexture file="Interface\AddOns\srslylawlUI\media\healthBar"/>
						<BarColor r="0.0" g="1.0" b="0.0"/>
					</StatusBar>
				</Frames>
				<Attributes>
					<Attribute name="useparent-unit" type="boolean" value="true"/>
					<Attribute name="unitsuffix" type="string" value="pet"/>
					<Attribute name="*type1" type="string" value="target"/>
				</Attributes>
			</Button>
		</Frames>
		<Scripts>
			<OnShow function="srslylawlUI_Frame_OnShow" />
			<OnEvent function="srslylawlUI_Frame_OnEvent"/>
		</Scripts>
	</Frame>
	<Frame name="srslylawlUI_PartyHeader" parent="UIParent" inherits="SecurePartyHeaderTemplate" movable="true">
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Attributes>
			<Attribute name="showParty" type="boolean" value="true"/>
			<Attribute name="showRaid" type="boolean" value="true"/>
			<Attribute name="showPlayer" type="boolean" value="true"/>
			<Attribute name="showSolo" type="boolean" value="true"/>
			<Attribute name="maxColumns" type="number" value="5"/>
			<Attribute name="unitsPerColumn" type="number" value="1"/>
			<Attribute name="columnAnchorPoint" type="string" value="TOP"/>
			<Attribute name="point" type="string" value="LEFT"/>
			<Attribute name="template" type="string" value="srslylawlUI_UnitTemplate"/>
			<Attribute name="templateType" type="string" value="Frame"/>
			<Attribute name="xOffset" type="number" value="2"/>
			<Attribute name="yOffset" type="number" value="2"/>
			<Attribute name="columnSpacing" type="number" value="10"/>
		</Attributes>
	</Frame>
</Ui>
